@model DataTable
@using System.Data
@{
    ViewData["Title"] = "Department List";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Department</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Department List</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm">

        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Department Table</h5>
            <a asp-action="AddDepartment" asp-controller="Department" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-plus-lg"></i> Add New Department
            </a>
        </div>

        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle datatable">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Department ID</th>
                            <th scope="col">Department Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Is Active</th>
                            <th scope="col">Created</th>
                            <th scope="col">Modified</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["DepartmentID"]</td>
                                <td>@row["DepartmentName"]</td>
                                <td>@row["Description"]</td>
                                <td>@row["IsActive"]</td>
                                <td>@row["Created"]</td>
                                <td>@row["Modified"]</td>
                                <td>@row["UserName"]</td>
                                <td class="text-center">
                                    <a class="btn btn-outline-success btn-sm"
                                       asp-controller="Department"
                                       asp-action="AddDepartment"
                                       asp-route-DepartmentId="@row["DepartmentID"]"
                                       title="Edit">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm ms-1"
                                       asp-controller="Department"
                                       asp-action="Delete"
                                       asp-route-DepartmentId="@row["DepartmentID"]"
                                       onclick="return confirm('Are you sure you want to delete this Department?');"
                                       title="Delete">
                                        <i class="bi bi-x"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
