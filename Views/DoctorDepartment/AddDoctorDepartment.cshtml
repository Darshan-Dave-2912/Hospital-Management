@model DoctorDepartment
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Doctor Department</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Add Doctor Department</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Doctor Department Form</h5>
        </div>
        <div class="card-body">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form class="row g-3" asp-controller="DoctorDepartment" asp-action="AddEdit" method="post">
                <input type="hidden" asp-for="DoctorDepartmentId" />

                <!-- Doctor Dropdown -->
                <div class="col-12">
                    <label asp-for="DoctorId" class="form-label">Doctor</label>
                    <select class="form-select" asp-for="DoctorId">
                        <option value="">Select Doctor</option>
                        @foreach (var doc in ViewBag.DoctorList)
                        {
                            <option value="@doc.DoctorID">@doc.name</option>
                        }
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <!-- Department Dropdown -->
                <div class="col-12">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select class="form-select" asp-for="DepartmentId">
                        <option value="">Select Department</option>
                        @foreach (var dept in ViewBag.DepartmentList)
                        {
                            <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" />
                <input type="hidden" value="4" asp-for="UserID" />

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle"></i> Submit
                    </button>
                </div>
            </form>

        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
