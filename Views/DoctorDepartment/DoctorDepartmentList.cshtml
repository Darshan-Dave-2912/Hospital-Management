@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "Doctor Department List";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Doctor Department</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Doctor Department List</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Doctor Department Table</h5>
            <a asp-action="AddDoctorDepartment" asp-controller="DoctorDepartment"
               class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Doctor Department
            </a>
        </div>

        <div class="card-body">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <!-- Data Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped text-center align-middle datatable">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Doctor Dept. ID</th>
                            <th scope="col">Doctor Name</th>
                            <th scope="col">Department</th>
                            <th scope="col">Created</th>
                            <th scope="col">Modified</th>
                            <th scope="col">User</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["DoctorDepartmentID"]</td>
                                <td>@row["Name"]</td>
                                <td>@row["DepartmentName"]</td>
                                <td>@row["Created"]</td>
                                <td>@row["Modified"]</td>
                                <td>@row["UserName"]</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a class="btn btn-outline-success btn-sm"
                                           asp-controller="DoctorDepartment"
                                           asp-action="AddDoctorDepartment"
                                           asp-route-DoctorDepartmentId="@row["DoctorDepartmentID"]">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm"
                                           asp-controller="DoctorDepartment"
                                           asp-action="Delete"
                                           asp-route-DoctorDepartmentID="@row["DoctorDepartmentID"]"
                                           onclick="return confirm('Are you sure you want to delete this Doctor Department?');">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- End Data Table -->
        </div>
    </div>

</main>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js" defer></script>
}
