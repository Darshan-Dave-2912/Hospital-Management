@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Appointment List";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Appointment</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Appointment List</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm border-0">

        <a asp-action="AddAppointment" asp-controller="Appointment"
           class="btn btn-outline-primary col-2 position-absolute top-0 end-0 m-2">
            <i class="bi bi-plus-circle"></i> Add Appointment
        </a>

        <div class="card-body table-responsive">
            <h5 class="card-title">Appointment Table</h5>

            <form method="post" asp-action="AppointmentList">
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="DoctorName" name="DoctorName" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="PatientName" name="PatientName" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                    
                </div>
            </form><br />

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <table class="table table-bordered table-hover table-striped align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Doctor</th>
                        <th scope="col">Patient</th>
                        <th scope="col">Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Description</th>
                        <th scope="col">Remarks</th>
                        <th scope="col">Created</th>
                        <th scope="col">Modified</th>
                        <th scope="col">User</th>
                        <th scope="col">Amount</th>
                        <th scope="col" class="text-center">Edit</th>
                        <th scope="col" class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.Rows.Count > 0){
                        foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["AppointmentID"]</td>
                                <td>@row["Name"]</td>
                                <td>@row["Patient_Name"]</td>
                                <td>@row["AppointmentDate"]</td>
                                <td>
                                    <span class="badge bg-@(row["AppointmentStatus"].ToString() == "Completed" ? "success" : row["AppointmentStatus"].ToString() == "Pending" ? "warning text-dark" : "secondary")">
                                        @row["AppointmentStatus"]
                                    </span>
                                </td>
                                <td>@row["Description"]</td>
                                <td>@row["SpecialRemarks"]</td>
                                <td>@row["Created"]</td>
                                <td>@row["Modified"]</td>
                                <td>@row["UserName"]</td>
                                <td>@row["TotalConsultedAmount"]</td>
                                <td class="text-center">
                                    <a class="btn btn-outline-success btn-sm"
                                       asp-controller="Appointment" asp-action="AddAppointment"
                                       asp-route-AppointmentId="@row["AppointmentID"]">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-outline-danger btn-sm"
                                       asp-controller="Appointment" asp-action="Delete"
                                       asp-route-AppointmentID="@row["AppointmentID"]"
                                       onclick="return confirm('Are you sure you want to delete this Appointment?');">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No records found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</main>
