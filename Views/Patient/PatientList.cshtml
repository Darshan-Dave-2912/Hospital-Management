@using System.Data;
@model DataTable

@{
    ViewData["Title"] = "Patient List";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Patient</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Patient List</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Patient Table</h5>
            <a asp-action="AddPatient" asp-controller="Patient" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Patient
            </a>
        </div>

        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <div class="table-responsive">
            <table class="table  table-striped text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Patient ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Active</th>
                        <th scope="col">Created</th>
                        <th scope="col">Modified</th>
                        <th scope="col">User</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["PatientID"]</td>
                            <td>@row["Name"]</td>
                            <td>@row["DateOfBirth"]</td>
                            <td>@row["Gender"]</td>
                            <td>@row["Email"]</td>
                            <td>@row["Phone"]</td>
                            <td>@row["Address"]</td>
                            <td>@row["City"]</td>
                            <td>@row["State"]</td>
                            <td>@row["IsActive"]</td>
                            <td>@row["Created"]</td>
                            <td>@row["Modified"]</td>
                            <td>@row["UserName"]</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a class="btn btn-outline-success btn-sm"
                                       asp-controller="Patient"
                                       asp-action="AddPatient"
                                       asp-route-patientId="@row["PatientID"]">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm"
                                       asp-controller="Patient"
                                       asp-action="Delete"
                                       asp-route-PatientID="@row["PatientID"]"
                                       onclick="return confirm('Are you sure you want to delete this Patient?');">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>

</main>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js" defer></script>
}
