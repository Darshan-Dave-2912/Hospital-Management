@model Patient

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Patient</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Add Patient</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Patient Form</h5>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            <form class="row g-3" asp-action="AddEdit" asp-controller="Patient" method="post">

                <div class="col-12">
                    <input type="hidden" class="form-control" asp-for="PatientId">
                </div>
                <div class="col-12">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Date Of Birth</label>
                    <input type="date" class="form-control" asp-for="DateOfBirth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Gender</label><br />
                    <input class="form-check-input" type="radio"  value="Male" name="gender" asp-for="Gender">
                    <label class="form-check-label" for="flexRadioDefault1">Male</label>
                    <input class="form-check-input" type="radio" value="Female" name="gender" asp-for="Gender">
                    <label class="form-check-label" for="flexRadioDefault1">Female</label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label  class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label  class="form-label">Phone</label>
                    <input type="number" class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">City</label>
                    <input type="text" class="form-control" asp-for="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">State</label>
                    <input type="text" class="form-control" asp-for="State" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <input type="checkbox" asp-for="IsActive" />
                    <label class="form-label">Is Active</label>
                </div>

                <div class="col-12">
                    <input type="hidden" class="form-control" asp-for="Created" />
                </div>


                <div class="col-12">
                    <input type="hidden" class="form-control" asp-for="Modified" />
                </div>

                <div class="col-12">
                    <input type="hidden" class="form-control" asp-for="UserID" />
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-primary col-2">Submit</button>
                    <a asp-action="PatientList" asp-controller="Patient" class="btn btn-secondary col-2">Cancel</a>
                </div>



            </form>

        </div>
    </div>

</main>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}